    public static void hrač1() {

        while (konec == false) {

            System.out.println(" ");
            System.out.println("kam chceš dat zank, napiš čislo polička");
            tah();
            if (konec!=true) {


                System.out.println(" ");
                System.out.println("ted hraje bot");
                bot();
            }
        }
    }


