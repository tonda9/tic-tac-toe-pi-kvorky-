    static void tah() {
        if (konec)return;
        Scanner scanner = new Scanner(System.in);
        int poličko = scanner.nextInt();
        if (seznam_čisla.contains(poličko)) {
            System.out.println("tohle čislo bylo zadané ");
            cislo_bylo_už_zadano = true;
        }
        seznam_čisla.add(poličko);

        if (cislo_bylo_už_zadano == false) {
            if (poličko == 1) {
                pole1 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 2) {
                pole2 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 3) {
                pole3 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 4) {
                pole4 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 5) {
                pole5 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 6) {
                pole6 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 7) {
                pole7 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 8) {
                pole8 = "| X | ";
                vypsat_pole();
            }
            if (poličko == 9) {
                pole9 = "| X | ";
                vypsat_pole();
            }
            if (seznam_čisla.contains(1) &&
                    seznam_čisla.contains(2) &&
                    seznam_čisla.contains(3) &&
                    seznam_čisla.contains(4) &&
                    seznam_čisla.contains(5) &&
                    seznam_čisla.contains(6) &&
                    seznam_čisla.contains(7) &&
                    seznam_čisla.contains(8) &&
                    seznam_čisla.contains(9)) {
                konec = true;
                System.out.println("remiza");


            }
            if (pole1 == pole2 && pole2 == pole3 && pole3 == "| X | " && pole2 == "| X | " && pole1 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;
            }
            if (pole4 == pole5 && pole5 == pole6 && pole6 == "| X | " && pole4 == "| X | " && pole5 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;

            }
            if (pole7 == pole8 && pole8 == pole9 && pole9 == "| X | " && pole7 == "| X | " && pole8 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;

            }
            if (pole5 == pole2 && pole2 == pole8 && pole8 == "| X | " && pole5 == "| X | " && pole2 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;

            }
            if (pole1 == pole4 && pole4 == pole7 && pole7 == "| X | " && pole4 == "| X | " && pole1 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;

            }
            if (pole9 == pole6 && pole6 == pole3 && pole3 == "| X | " && pole9 == "| X | " && pole6 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
                konec = true;

            }
            if (pole1 == pole5 && pole5 == pole9 && pole9 == "| X | " && pole5 == "| X | " && pole1 == "| X | ") {
                System.out.println(" ");
                System.out.println("vyhraly X");
