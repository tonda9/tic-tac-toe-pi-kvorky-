    public static void hrač2() {

        while (konec == false) {

            System.out.println(" ");
            System.out.println("kam chceš dat zank, napiš čislo polička");
            tah();
            if (konec!=true) {


                System.out.println(" ");
                System.out.println("ted hraje druhy hrač");
                tah2();

            }
        }
    }
    static void tah2() {
        if (konec)return;
        Scanner scanner = new Scanner(System.in);
        int poličko_bot = scanner.nextInt();
